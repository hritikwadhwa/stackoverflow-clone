<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="form-header">
      <h1>Post A Question</h1>
    </div>
    <div class="form-body">
      <%= form_with model: @question, url: questions_create_path do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :body, "Description" %>
          <%= f.text_area :body, size: '50x10', class: "form-control" %>
        </div>
        <div class="form-group">
          <button style="margin-right: 5px" class="btn btn-secondary">Reset</button>
          <%= f.submit "Post", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>